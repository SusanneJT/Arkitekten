@model OrderedProduct

@{
    ViewData["Title"] = "Lägg till beställd produkt";
}


<h1 class="pt-3">Lägg till beställd produkt</h1>
<div class="container">
    <div class="row pt-3">
        <div class="col-lg-10">

            <form asp-action="AddOrderedProduct" asp-route-id="@ViewBag.ProjectId" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ProductName" class="col-md-6 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ProductType" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="ProductType" class="form-control" />
                        <span asp-validation-for="ProductType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Amount" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Retailer" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="Retailer" class="form-control" />
                        <span asp-validation-for="Retailer" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Details" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="Details" class="form-control" />
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger" data-valmsg-replace="false"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-5">
                        <input type="submit" class="btn btn-primary" value="Lägg till" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>